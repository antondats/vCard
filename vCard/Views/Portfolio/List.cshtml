@using vCard.Models
@model IEnumerable<Project>

@{
    ViewBag.Title = "Portfolio";
}

<aside class="grid col-one-quarter mq2-col-full">
    <p class="mbottom">It is all of my projects. </p>
</aside>
<section class="grid col-three-quarters mq2-col-full">
    <div class="grid-wrap works">
        
            @foreach (Project project in Model)
            {
                <figure class="grid col-one-third mq1-col-one-half mq2-col-one-third mq3-col-full">
                   <a href="@Url.RouteUrl(new {action = "Item", controller = "Project", project = project.ProjectID} )"> 
                    <img src="@Html.Action("GetMainImage", "Portfolio", new { @project.ProjectID })" alt="image" /> 
                    <span class="zoom"></span> 
                   </a>
                   <figcaption>
                       @Html.RouteLink(@project.Title, new { action = "Item", controller = "Project", project = project.ProjectID }, new { @class = "arrow" })
                   </figcaption>
                </figure>
            }
        
    </div>
</section>
