@model IEnumerable<vCard.Models.Project>

@{
    ViewBag.Title = "Admin: Projects";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Projects</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Title</th>               
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.ProjectID</td>
                    <td>@Html.ActionLink(item.Title, "ProjectEdit", new { item.ProjectID })</td>
                    <td class="text-center">
                        @using (Html.BeginForm("DeleteProject", "Admin"))
                        {
                            @Html.Hidden("ProjectID", item.ProjectID)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Delete" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add new", "AddProject", null,
            new { @class = "btn btn-default" })
    </div>
</div>


